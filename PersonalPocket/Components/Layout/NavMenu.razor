@inject AppState AppState
@inject NavigationManager Navigation

@if (AppState.IsAuthenticated)
{
    <div class="top-row ps-3 navbar navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="">PersonalPocket</a>
        </div>
    </div>

    <input type="checkbox" title="Navigation menu" class="navbar-toggler" />
    <div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
        <nav class="flex-column">
            <div class="nav-item px-3 p-3">
                <NavLink class="nav-link" href="dashboard">Dashboard</NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="transaction">Transaction</NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="debtmanagement">Debt Management</NavLink>
            </div>
            <div class="nav-item px-3 mt-3">
                <button class="btn btn-danger w-100" @onclick="HandleLogout">Logout</button>
            </div>
        </nav>
    </div>
}

@code {
    private void HandleLogout()
    {
        AppState.IsAuthenticated = false; // Update authentication state
        Navigation.NavigateTo("/");      // Redirect to login page
    }
}
