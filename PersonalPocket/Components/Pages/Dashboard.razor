@page "/dashboard"

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<div class="container mt-4">
    <h1 class="text-center mb-4">Dashboard</h1>

    <!-- Summary Section -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Total Inflows</h5>
                    <p class="card-text">Rs 10,000</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5 class="card-title">Total Outflows</h5>
                    <p class="card-text">Rs 7,500</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Total Debts</h5>
                    <p class="card-text">Rs 2,500</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Key Metrics Section -->
    <div class="row align-items-md-center mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Cleared Debts</h6>
                    <p class="card-text">Rs 1,000</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Remaining Debts</h6>
                    <p class="card-text">Rs 1,500</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Transactions Section -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Top 5 Highest Transactions</h6>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Rs 2,000</li>
                        <li class="list-group-item">Rs 1,500</li>
                        <li class="list-group-item">Rs 1,200</li>
                        <li class="list-group-item">Rs 1,000</li>
                        <li class="list-group-item">Rs 800</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Top 5 Lowest Transactions</h6>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Rs 50</li>
                        <li class="list-group-item">Rs 100</li>
                        <li class="list-group-item">Rs 200</li>
                        <li class="list-group-item">Rs 250</li>
                        <li class="list-group-item">Rs 300</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Debts Section -->
    <!-- Pending Debts Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Pending Debts</h6>

                    <!-- Filter Section -->
                    <div class="mb-3">
                        <label for="dateRange" class="form-label">Filter by Date Range</label>
                        <div class="row gx-2">
                            <div class="col-md-6">
                                <input type="date" id="startDate" class="form-control" placeholder="Start Date">
                            </div>
                            <div class="col-md-6">
                                <input type="date" id="endDate" class="form-control" placeholder="End Date">
                            </div>
                        </div>
                        <div class="mt-3 text-end">
                            <button class="btn btn-primary" type="button">Apply Filter</button>
                        </div>
                    </div>

                    <!-- Pending Debts List -->
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Debt Name</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Debt 1</td>
                                    <td class="text-danger">Rs 500</td>
                                </tr>
                                <tr>
                                    <td>Debt 2</td>
                                    <td class="text-danger">Rs 300</td>
                                </tr>
                                <tr>
                                    <td>Debt 3</td>
                                    <td class="text-danger">Rs 200</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

